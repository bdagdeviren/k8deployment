FROM ubuntu
RUN apt-get update -y && DEBIAN_FRONTEND="noninteractive" apt-get install -y software-properties-common build-essential patchelf python3.9 python3-pip && pip3 install staticx
RUN add-apt-repository ppa:longsleep/golang-backports && apt-get update -y && apt-get install -y golang-go cmake wget libssl-dev
RUN wget http://ftp.de.debian.org/debian/pool/main/libg/libgit2/libgit2-1.1_1.1.0+dfsg.1-4_amd64.deb && wget http://ftp.de.debian.org/debian/pool/main/libg/libgit2/libgit2-dev_1.1.0+dfsg.1-4_amd64.deb && apt install -y ./libgit2-dev_1.1.0+dfsg.1-4_amd64.deb ./libgit2-1.1_1.1.0+dfsg.1-4_amd64.deb
#RUN wget https://github.com/libgit2/libgit2/releases/download/v1.1.0/libgit2-1.1.0.tar.gz && tar -xvf libgit2-1.1.0.tar.gz && cd libgit2-1.1.0/ && mkdir build && cd build && cmake .. -DCMAKE_INSTALL_PREFIX=/usr/local && cmake --build . --target install